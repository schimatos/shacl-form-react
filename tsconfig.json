{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "ES2019.Array",
      "es2017",
      "dom"
    ],
    "jsx": "react-jsx",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "src",
    "public"
  ]
}
